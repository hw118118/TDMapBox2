<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/rl_vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/iv_vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/vector"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/tv_streets"
                android:layout_below="@id/iv_vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_centerHorizontal="true"
                android:text="矢量地图"
                android:textColor="@color/baseGrayMore"
                android:textSize="9sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/iv_satellite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/satellite"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/tv_satellite"
                android:layout_below="@id/iv_satellite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_centerHorizontal="true"
                android:text="卫星地图"
                android:textColor="@color/baseGrayMore"
                android:textSize="9sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>